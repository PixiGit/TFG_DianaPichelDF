    function validarNombre() {

      var nombre = document.getElementById("nombre").value;
      valido = /^[a-zA-Z]{3,14}$/.test(nombre);
      if (!valido) {
        alert("El nombre debe de tener solo valores no numéricos (entre 3 y 14 caracteres).");
        document.getElementById("nombre").focus();
      }

      return valido;
    }

    function validarApellidos() {
      var apellidos = document.getElementById("apellidos").value;
      valido = /^[a-zA-Z]{3,25}$/.test(apellidos);
      if (!valido) {
        alert("El apellido debe de tener solo valores no numéricos (entre 3 y 25 caracteres).");
        document.getElementById("apellidos").focus();
      }
      return valido;

    }

    function validarEdad() {
      var edad = document.getElementById("edad").value;
      valido = /^[1-9][0-9]{1}$/.test(edad);
      if (!valido) {
        alert("La edad debe de tener solo valores numéricos entre 10 y 99.");
        document.getElementById("edad").focus();
      }
      return valido;
    }

    function validarEmail() {
      var email = document.getElementById("email").value;
      valido = /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email);
      if (!valido){

        alert("Escribe un email válido, por favor.");
        document.getElementById("email").focus();
      }
      return valido;
    }

    function validarAsunto() {
      var asunto = document.getElementById("asunto").value;
      valido = /^.{1,40}$/.test(asunto);
      if (!valido){
         alert("El asunto debe de tener entre 1 y 40 caracteres.")
         document.getElementById("asunto").focus();
      }
      return valido;
    }

    function validarMensaje() {
      var mensaje = document.getElementById("mensaje").value;
      valido = /^.{1,400}$/.test(mensaje);
      if (!valido){
         alert("El mensaje debe de tener entre 1 y 400 caracteres.");
         document.getElementById("mensaje").focus();
      }
      return valido;
    }

    function validacion() {
      // Obtener valores campos


      // Realiza validación
      if (!validarNombre()) {

        return;
      }

      if (!validarApellidos()) {

        return;
      }

      if (!validarEdad()) {

        return;
      }

      if (!validarEmail()) {

        return;
      }

      if (!validarAsunto()) {

        return;
      }

      if (!validarMensaje()) {

        return;
      }

      // Si todas las validaciones pasan, mostrar mensaje de éxito
      alert("La validación se realizó correctamente. Enviando formulario...");
      document.getElementById("contactForm").submit();
    }
