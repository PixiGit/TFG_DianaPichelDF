  <!-- cambio tamaño fuente botones A+/- -->
  <script>
    document.addEventListener("DOMContentLoaded", function () {
        function aumentarLetra() {
            var fontSize = parseInt(document.body.style.fontSize) || 16;
            fontSize += 2;
            document.body.style.fontSize = fontSize + "px";
        }

        function reducirLetra() {
            var fontSize = parseInt(document.body.style.fontSize) || 16;
            fontSize -= 2;
            document.body.style.fontSize = fontSize + "px";
        }

        document.getElementById("ampliar-letra").addEventListener("click", function (event) {
            event.preventDefault();
            aumentarLetra(); 
        });

        document.getElementById("reducir-letra").addEventListener("click", function (event) {
            event.preventDefault(); 
            reducirLetra(); 
        });
    });
  </script>

  <!--fecha y hora-->

  <script>
    function mostrarFechaHora() {

      var fechaHoraElemento = document.getElementById('fechaHora');

      var fechaHora = new Date();

      var formatoFechaHora = fechaHora.toLocaleString();

      fechaHoraElemento.textContent = formatoFechaHora;
    }

    mostrarFechaHora();
  </script>
